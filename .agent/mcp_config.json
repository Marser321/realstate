{
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp",
                "--api-key",
                "YOUR_API_KEY"
            ]
        },
        "shadcn": {
            "command": "npx",
            "args": [
                "shadcn@latest",
                "mcp"
            ]
        },
        "stitch": {
            "command": "npx",
            "args": [
                "-y",
                "stitch-mcp"
            ],
            "env": {
                "GOOGLE_CLOUD_PROJECT": "TU_ID_DE_PROYECTO_AQUI"
            }
        }
        //other mcp servers
    }
}
// setup mcp server in  ~/.gemini\antigravity\mcp_config.json